<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/viewDrinksListRowDrinksButton"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/content_description_drink_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_drink" />

    <TextView
        android:id="@+id/viewDrinksListRowAlcoholPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDrinksListRowDrinksButton"
        app:layout_constraintStart_toEndOf="@+id/viewDrinksListRowDrinksButton"
        app:layout_constraintTop_toTopOf="@+id/viewDrinksListRowDrinksButton" />

    <TextView
        android:id="@+id/viewDrinksListRowDateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/viewDrinksListRowDrinksButton"
        app:layout_constraintTop_toBottomOf="@+id/viewDrinksListRowDrinksButton" />

    <TextView
        android:id="@+id/viewDrinksListRowDrinkSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDrinksListRowDrinksButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewDrinksListRowDrinksButton" />

    <ImageButton
        android:id="@+id/viewDrinksListRowTrashButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/content_description_trash_image"
        android:src="@mipmap/ic_trash_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/viewDrinksListRowDateAdded"
        app:layout_constraintEnd_toEndOf="@+id/viewDrinksListRowDrinkSize"
        app:layout_constraintTop_toTopOf="@+id/viewDrinksListRowDateAdded" />
</androidx.constraintlayout.widget.ConstraintLayout>